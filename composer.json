{
    "name": "rcvieira/alura-php-composer",
    "description": "Projeto demostracao de como usar o php composer",
    "type": "library",
    "authors": [
        {
            "name": "Rodrigo Vieira"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "symfony/dom-crawler": "^7.1",
        "symfony/css-selector": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "rcvieira\\Curso\\": "src/"
        },
        "classmap": [
            "./Teste.php"
        ],
        "files": [
            "./functions.php"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "*",
        "phan/phan": "^5.4"
    }
}
